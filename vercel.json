{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.11" }
    },
    {
      "src": "create.html",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.(jpg|png|css|js|ico|svg|webp|gif)",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/create.html"
    }
  ]
}
